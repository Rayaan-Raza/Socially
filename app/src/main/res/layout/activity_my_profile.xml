<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".my_profile"
    android:background="@color/white"
    android:id="@+id/main">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="jacob_w"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/smd_theme" />

        <ImageView
            android:id="@+id/dropdown_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_toEndOf="@id/username"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/chev_down"
            android:padding="1dp"
            app:tint="@color/smd_theme" />
        <ImageView
            android:id="@+id/acc_private"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_toStartOf="@id/username"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/shopping_bag"
             app:tint="@color/smd_theme" />

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/union"
            android:background="@drawable/menu_options"
            android:backgroundTint="@color/smd_theme"
            android:layout_marginRight="10dp"

             app:tint="@color/smd_theme" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:layout_above="@id/bottomBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/profileHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <FrameLayout
                    android:id="@+id/profileImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/highlight_circle" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="36dp"
                        app:cardUseCompatPadding="false"
                        app:cardPreventCornerOverlap="true">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/person1" />
                    </androidx.cardview.widget.CardView>
                </FrameLayout>


                <LinearLayout
                    android:id="@+id/statsContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/profileImage"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="32dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/postsStats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="24dp">

                        <TextView
                            android:id="@+id/postsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="54"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/postsLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Posts"
                            android:textSize="14sp"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/followersStats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="24dp">

                        <TextView
                            android:id="@+id/followersCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="834"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/followersLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Followers"
                            android:textSize="14sp"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/followingStats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/followingCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="162"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/followingLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Following"
                            android:textSize="14sp"
                            android:textColor="@color/black" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/bioSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/displayName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jacob West"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/bioLine1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Digital goodies designer @pixseliz"
                    android:textSize="14sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/bioLine2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Everything is designed."
                    android:textSize="14sp"
                    android:textColor="@color/black" />

            </LinearLayout>

            <TextView
                android:id="@+id/editProfileBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="Edit Profile"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/smd_theme"
                android:background="@drawable/message_bttn"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:backgroundTintMode="src_in"
                android:paddingBottom="8dp"
                android:gravity="center"/>

            <LinearLayout
                android:id="@+id/highlightsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp"
                android:gravity="start">

                <LinearLayout
                    android:id="@+id/newHighlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:id="@+id/newHighlightIcon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/plus"
                        android:background="@drawable/highlight_circle"
                        android:clipToOutline="true"
                        android:padding="20dp"
                        app:tint="@color/smd_theme" />

                    <TextView
                        android:id="@+id/newHighlightLabel"
                        android:layout_width="wrap_content"
                        android:tint="@color/smd_theme"

                        android:layout_height="wrap_content"
                        android:text="New"
                        android:textSize="12sp"
                        android:textColor="@color/smd_theme"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/friendsHighlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="16dp">

                    <FrameLayout
                        android:id="@+id/friendsHighlightContainer"
                        android:layout_width="60dp"
                        android:layout_height="60dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/highlight_circle"
                            />

                        <androidx.cardview.widget.CardView
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="26dp"
                            app:cardUseCompatPadding="false"
                            app:cardPreventCornerOverlap="true">

                            <ImageView
                                android:id="@+id/friendsHighlightIcon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/people" />
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>


                    <TextView
                        android:id="@+id/friendsHighlightLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Friends"
                        android:textSize="12sp"
                        android:textColor="@color/smd_theme"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sportHighlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="16dp">

                    <FrameLayout
                        android:id="@+id/sportHighlightContainer"
                        android:layout_width="60dp"
                        android:layout_height="60dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/highlight_circle" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="26dp"
                            app:cardUseCompatPadding="false"
                            app:cardPreventCornerOverlap="true">

                            <ImageView
                                android:id="@+id/sportHighlightIcon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/city" />
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>


                    <TextView
                        android:id="@+id/sportHighlightLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sport"
                        android:textSize="12sp"
                        android:textColor="@color/smd_theme"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/designHighlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <FrameLayout
                        android:id="@+id/designHighlightContainer"
                        android:layout_width="60dp"
                        android:layout_height="60dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/highlight_circle" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="26dp"
                            app:cardUseCompatPadding="false"
                            app:cardPreventCornerOverlap="true">

                            <ImageView
                                android:id="@+id/designHighlightIcon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/person1" />
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>


                    <TextView
                        android:id="@+id/designHighlightLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Design"
                        android:textColor="@color/smd_theme"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_below="@id/highlightsSection"
                />

            <LinearLayout
                android:id="@+id/tabsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/gridTab"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/grid"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/taggedTab"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/tagged"
                    android:layout_gravity="center" />

            </LinearLayout>


            <View
                android:layout_width="205dp"
                android:layout_height="1dp"
                android:background="@color/smd_theme"
                android:id="@+id/view_bar"
                />



            <LinearLayout
                android:id="@+id/postsGridLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="72dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="2dp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/city"
                        android:layout_margin="2dp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:layout_margin="2dp"
                        android:src="@drawable/lake"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/people"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/man_coffee"
                        android:layout_margin="2dp"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/landscape"
                        android:layout_margin="2dp"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/karenne"
                        android:layout_margin="2dp"
                        />
                </LinearLayout>
  <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/white_man"
                        android:layout_margin="2dp"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/white_woman"
                        android:layout_margin="2dp"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/italian_man"
                        android:layout_margin="2dp"
                        />
                </LinearLayout>


            </LinearLayout>



        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="5">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/home_un"
                app:tint="@color/smd_theme"
                android:id="@+id/nav_home"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/search"
                app:tint="@color/smd_theme"
                android:id="@+id/nav_search"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/create"
                app:tint="@color/smd_theme"
                android:id="@+id/nav_create"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/like"
                app:tint="@color/smd_theme"
                android:id="@+id/nav_like"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:src="@drawable/oval"
                android:id="@+id/nav_profile"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>