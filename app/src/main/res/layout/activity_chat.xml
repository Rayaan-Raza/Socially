<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".chat">

    <!-- Header Background -->
    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#F8F8F8"
        android:orientation="horizontal">
        <!-- This is just a background, content is overlaid -->
    </LinearLayout>

    <ImageView
        android:id="@+id/back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/left_chev"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:tint="@color/smd_theme" />

    <TextView
        android:id="@+id/avatar"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_toEndOf="@id/back"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="IS"
        android:background="@drawable/circular_background"
        android:backgroundTint="@color/smd_theme"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/avatar"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:text="Username"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/instagram_sans_headline"/>

    <ImageView
        android:id="@+id/info"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/info"
        app:tint="@color/smd_theme" />

    <ImageView
        android:id="@+id/voice"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_toStartOf="@id/video"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_call" />


    <ImageView
        android:id="@+id/video"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_toStartOf="@id/info"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/call_real" />

    <!--
    FIX: The RecyclerView now correctly fills the space between the header and the input field.
    The conflicting Button has been removed.
    -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messagesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/header_bar"
        android:layout_above="@id/inputField"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"/>

    <!-- Input field area -->
    <RelativeLayout
        android:id="@+id/inputField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <EditText
            android:id="@+id/message_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/message_bar"
            android:hint="Message..."
            android:imeOptions="actionSend"
            android:inputType="text"
            android:paddingStart="50dp"
            android:paddingEnd="120dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textColorHint="@color/gray" />

        <ImageView
            android:id="@+id/cameraIcon"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:layout_alignTop="@id/message_input"
            android:layout_alignBottom="@id/message_input"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:src="@drawable/camera_circle"/>

        <!-- Send Button -->
        <ImageView
            android:id="@+id/sendButton"
            android:layout_width="24dp"
            android:layout_height="0dp"
            android:layout_alignTop="@id/message_input"
            android:layout_alignBottom="@id/message_input"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_send"
            app:tint="@color/smd_theme" />

        <ImageView
            android:id="@+id/stickersIcon"
            android:layout_width="24dp"
            android:layout_height="0dp"
            android:layout_alignTop="@id/message_input"
            android:layout_alignBottom="@id/message_input"
            android:layout_toStartOf="@id/sendButton"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/stickers"/>

        <ImageView
            android:id="@+id/gallery"
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_alignTop="@id/message_input"
            android:layout_alignBottom="@id/message_input"
            android:layout_toStartOf="@id/stickersIcon"
            android:layout_centerVertical="true"
            android:src="@drawable/picture"
            android:layout_marginEnd="10dp"/>

        <ImageView
            android:id="@+id/extraIcon"
            android:layout_width="22dp"
            android:layout_height="0dp"
            android:layout_alignTop="@id/message_input"
            android:layout_alignBottom="@id/message_input"
            android:layout_toStartOf="@id/gallery"
            android:layout_centerVertical="true"
            android:src="@drawable/mic"
            android:layout_marginEnd="10dp"/>

    </RelativeLayout>
</RelativeLayout>
