<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".you_page"
    android:background="@color/white">

    <!-- Top Bar -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:id="@+id/header_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tab_following"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Following"
                android:textColor="@color/smd_theme"
                android:textSize="16sp"
                android:gravity="center"
                android:fontFamily="@font/instagram_sans_headline"
                android:paddingBottom="12dp" />

            <TextView
                android:id="@+id/tab_you"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="You"
                android:textColor="@color/smd_theme"
                android:textSize="16sp"
                android:gravity="center"
                android:fontFamily="@font/instagram_sans_headline"
                android:paddingBottom="12dp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/divider_header"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"
        android:layout_below="@id/topBar" />

    <!-- Section header -->
    <TextView
        android:id="@+id/requests_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider_header"
        android:text="Follow Requests"
        android:textSize="14sp"
        android:textColor="@color/smd_theme"
        android:fontFamily="@font/instagram_sans_bold"
        android:padding="16dp" />

    <!-- RecyclerView for requests -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/requestsRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/requests_title"
        android:layout_above="@id/bottomBar"
        tools:listitem="@layout/item_follow_request"
        tools:itemCount="3" />

    <!-- Bottom Bar -->
    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="5">

            <ImageView
                android:id="@+id/nav_home"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/home_un"
                app:tint="@color/smd_theme" />

            <ImageView
                android:id="@+id/nav_search"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/search"
                app:tint="@color/smd_theme" />

            <ImageView
                android:id="@+id/nav_create"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/create"
                app:tint="@color/smd_theme" />

            <ImageView
                android:id="@+id/nav_like"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/liked"
                app:tint="@color/smd_theme" />

            <ImageView
                android:id="@+id/nav_profile"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:src="@drawable/oval" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
