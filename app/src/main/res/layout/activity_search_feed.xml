<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search_feed"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/search"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@id/scan"
            android:layout_marginEnd="12dp"
            android:background="@drawable/acc_bar"
            android:backgroundTint="#F2EDED"
            android:hint="Search"
            android:textColorHint="@color/smd_theme"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:drawableStart="@drawable/search"
            android:drawableTint="@color/smd_theme"
            android:drawablePadding="8dp"
            android:inputType="text"/>

        <ImageView
            android:id="@+id/scan"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/scan"
            app:tint="@color/smd_theme"
            android:scaleType="centerCrop"/>
    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/chips"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/topBar"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chipShop"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:gravity="center"
                android:textColor="@color/smd_theme"
                android:layout_marginStart="8dp"
                android:text="Shop"
                android:textSize="12sp"
                android:fontFamily="@font/instagram_sans_bold"
                android:background="@drawable/follow_button"
                android:drawableStart="@drawable/shopping_bag"
                android:drawableTint="@color/smd_theme"/>

            <TextView
                android:id="@+id/chipStyle"
                android:layout_width="wrap_content"
                android:background="@drawable/follow_button"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/instagram_sans_bold"
                android:gravity="center"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:text="Style"
                android:textColor="@color/smd_theme"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/chipSports"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@drawable/follow_button"
                android:layout_marginStart="8dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:gravity="center"
                android:textColor="@color/smd_theme"
                android:text="Sports"
                android:textSize="12sp"
                android:fontFamily="@font/instagram_sans_bold"/>

            <TextView
                android:id="@+id/chipAuto"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/follow_button"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:textColor="@color/smd_theme"
                android:gravity="center"
                android:text="Auto"
                android:textSize="12sp"
                android:fontFamily="@font/instagram_sans_bold"/>

            <TextView
                android:id="@+id/chipMusic"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:paddingStart="14dp"
                android:textColor="@color/smd_theme"
                android:paddingEnd="14dp"
                android:background="@drawable/follow_button"
                android:gravity="center"
                android:text="Music"
                android:textSize="12sp"
                android:fontFamily="@font/instagram_sans_bold"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- NEW: RecyclerView instead of GridLayout -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/postsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/chips"
        android:layout_above="@+id/bottomBar"
        android:padding="1dp" />

    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="5">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/home_un"
                app:tint="@color/smd_theme"
                android:id="@+id/home"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/search_sel"
                app:tint="@color/smd_theme" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/create"
                app:tint="@color/smd_theme"
                android:id="@+id/create_account"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/like"
                app:tint="@color/smd_theme"
                android:id="@+id/activity_page"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:src="@drawable/oval"
                android:id="@+id/profile" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>