<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".specific_search">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <EditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/cancel_button"
            android:layout_marginEnd="12dp"
            android:background="@drawable/acc_bar"
            android:hint="Search for users..."
            android:textColorHint="#766D6D"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:drawableStart="@drawable/search"
            android:drawablePadding="8dp"
            android:inputType="text"/>

        <TextView
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Cancel"
            android:textColor="@color/smd_theme"
            android:textSize="16sp"
            android:visibility="gone"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/topBar"
        android:gravity="center"
        android:orientation="horizontal">
        <!-- Your tabs remain the same -->
        <TextView android:text="Top"
            android:layout_height="match_parent" android:layout_width="0dp"
            android:layout_weight="1" android:gravity="center"
            android:textStyle="bold" android:textSize="14sp"/>
        <TextView android:text="Accounts"
            android:layout_height="match_parent" android:layout_width="0dp"
            android:layout_weight="1" android:gravity="center"
            android:textSize="14sp"/>
        <TextView android:text="Tags"
            android:layout_height="match_parent" android:layout_width="0dp"
            android:layout_weight="1" android:gravity="center"
            android:textSize="14sp"/>
        <TextView android:text="Places"
            android:layout_height="match_parent" android:layout_width="0dp"
            android:layout_weight="1" android:gravity="center"
            android:textSize="14sp"/>
    </LinearLayout>

    <View
        android:id="@+id/dividerTabs"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tabs"
        android:background="#1A000000"/>

    <!-- The ScrollView has been replaced by a RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchResultsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dividerTabs"
        tools:listitem="@layout/item_user_search" />

</RelativeLayout>
